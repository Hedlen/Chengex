# ===========================================
# 数据库配置 (Database Configuration)
# ===========================================
# 数据库类型 - 支持 mysql, sqlite, memory
DB_TYPE=mysql

# MySQL 数据库连接信息
# 主机地址 (通常为 localhost 或服务器IP)
DB_HOST=localhost

# 数据库端口 (MySQL默认端口为3306)
DB_PORT=3306

# 数据库名称 (请确保数据库已创建)
DB_NAME=travelweb_db

# 数据库用户名
DB_USER=root

# 数据库密码 (请替换为实际密码)
DB_PASSWORD=your_secure_password

# 连接池最大连接数
DB_CONNECTION_LIMIT=10

# ===========================================
# 应用配置 (Application Configuration)
# ===========================================
NODE_ENV=development
PORT=3001

# JWT密钥 (生产环境请更换为安全的密钥)
JWT_SECRET=your_super_secure_jwt_secret_key

# ===========================================
# 安全配置 (Security Configuration)
# ===========================================
# CORS 允许的域名 (生产环境请指定具体域名)
CORS_ORIGIN=*

# 速率限制配置
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# 信任代理 (使用负载均衡时设置为 true)
TRUST_PROXY=false

# ===========================================
# 文件上传配置 (File Upload Configuration)
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,webm

# ===========================================
# 缓存配置 (Cache Configuration)
# ===========================================
CACHE_TYPE=memory
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# ===========================================
# 日志配置 (Logging Configuration)
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===========================================
# 性能配置 (Performance Configuration)
# ===========================================
MAX_CONNECTIONS=100
QUERY_TIMEOUT=30000
CACHE_SIZE=1000