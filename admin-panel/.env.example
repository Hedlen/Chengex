# TravelWeb 后台管理系统环境变量配置示例

# ===========================================
# API 配置
# ===========================================

# API 基础地址
# 开发环境: http://localhost:3001
# 生产环境: https://你的域名.com
VITE_API_BASE_URL=http://localhost:3001

# ===========================================
# 应用配置
# ===========================================

# 应用标题
VITE_APP_TITLE=TravelWeb 管理后台

# 应用版本
VITE_APP_VERSION=1.0.0

# 应用描述
VITE_APP_DESCRIPTION=TravelWeb 旅游网站后台管理系统

# ===========================================
# 开发服务器配置
# ===========================================

# 开发服务器端口
VITE_DEV_SERVER_PORT=5174

# 开发服务器主机
VITE_DEV_SERVER_HOST=0.0.0.0

# ===========================================
# 构建配置
# ===========================================

# 构建输出目录
VITE_BUILD_OUTDIR=dist

# 是否生成 source map
VITE_BUILD_SOURCEMAP=false

# 静态资源目录
VITE_BUILD_ASSETS_DIR=assets

# ===========================================
# 功能开关
# ===========================================

# 是否启用开发工具
VITE_ENABLE_DEV_TOOLS=true

# 是否启用调试模式
VITE_ENABLE_DEBUG=true

# 是否启用性能监控
VITE_ENABLE_PERFORMANCE_MONITOR=false

# ===========================================
# 安全配置
# ===========================================

# 允许的域名（CORS）
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5174

# API 请求超时时间（毫秒）
VITE_API_TIMEOUT=30000

# ===========================================
# 主题配置
# ===========================================

# 默认主题
VITE_DEFAULT_THEME=light

# 是否启用暗色模式
VITE_ENABLE_DARK_MODE=true

# ===========================================
# 分析配置
# ===========================================

# 是否启用分析功能
VITE_ENABLE_ANALYTICS=true

# 数据刷新间隔（毫秒）
VITE_ANALYTICS_REFRESH_INTERVAL=30000

# ===========================================
# 文件上传配置
# ===========================================

# 最大文件大小（MB）
VITE_MAX_FILE_SIZE=10

# 允许的文件类型
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm

# ===========================================
# 缓存配置
# ===========================================

# 缓存过期时间（毫秒）
VITE_CACHE_EXPIRE_TIME=300000

# 是否启用本地存储缓存
VITE_ENABLE_LOCAL_CACHE=true

# ===========================================
# 数据库连接配置
# ===========================================

# API 服务器健康检查端点
VITE_API_HEALTH_CHECK=/api/health

# 数据库信息端点
VITE_API_DATABASE_INFO=/api/database/info

# 连接测试间隔（毫秒）
VITE_CONNECTION_CHECK_INTERVAL=30000

# 连接超时时间（毫秒）
VITE_CONNECTION_TIMEOUT=10000

# 重试次数
VITE_CONNECTION_RETRY_COUNT=3

# 重试间隔（毫秒）
VITE_CONNECTION_RETRY_DELAY=2000

# ===========================================
# 错误处理配置
# ===========================================

# 是否显示详细错误信息
VITE_SHOW_DETAILED_ERRORS=true

# 错误日志级别
VITE_ERROR_LOG_LEVEL=error

# 是否启用错误上报
VITE_ENABLE_ERROR_REPORTING=false